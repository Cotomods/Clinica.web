@model Clinica.Domain.Entities.Turno

@{
    ViewData["Title"] = "Eliminar turno";
}

<h1>Eliminar turno</h1>

<h3>¿Estás seguro que deseas eliminar este turno?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaHoraInicio.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.FechaHoraInicio.ToString("HH:mm") - @Model.FechaHoraFin.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Médico</dt>
        <dd class="col-sm-10">@Model.Medico?.Apellido @Model.Medico?.Nombre</dd>

        <dt class="col-sm-2">Paciente</dt>
        <dd class="col-sm-10">@Model.Paciente?.Apellido @Model.Paciente?.Nombre</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TurnoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
