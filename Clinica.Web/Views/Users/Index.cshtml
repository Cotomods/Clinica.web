@model Clinica.Web.Models.PaginatedList<Clinica.Web.Models.UserListViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Médico</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>@u.MedicoNombre</td>
            <td>@string.Join(", ", u.Roles)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    var start = Math.Max(1, Model.PageIndex - 2);
    var end = Math.Min(Model.TotalPages, Model.PageIndex + 2);

    <nav aria-label="Paginación usuarios">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Anterior</a>
            </li>

            @for (var i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Siguiente</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">@Model.TotalCount registros</span>
            </li>
        </ul>
    </nav>
}
