@model Clinica.Web.Models.PaginatedList<Clinica.Web.Models.UserListViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<div class="row mb-3 mt-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="text" name="searchTerm" id="searchInput" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Buscar por email..." autocomplete="off" />
            <button type="submit" class="btn btn-secondary me-2">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Médico</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>@u.MedicoNombre</td>
            <td>@string.Join(", ", u.Roles)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    var start = Math.Max(1, Model.PageIndex - 2);
    var end = Math.Min(Model.TotalPages, Model.PageIndex + 2);

    <nav aria-label="Paginación usuarios">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex - 1)" 
                   asp-route-searchTerm="@ViewData["CurrentFilter"]">Anterior</a>
            </li>

            @for (var i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-pageNumber="@i" 
                       asp-route-searchTerm="@ViewData["CurrentFilter"]">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex + 1)" 
                   asp-route-searchTerm="@ViewData["CurrentFilter"]">Siguiente</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">@Model.TotalCount registros</span>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const searchForm = document.getElementById("searchForm");
            let timeout = null;

            if (searchInput && searchForm) {
                searchInput.addEventListener("input", function () {
                    clearTimeout(timeout);
                    timeout = setTimeout(function () {
                        searchForm.submit();
                    }, 500); // 500ms debounce
                });

                const val = searchInput.value;
                searchInput.value = '';
                searchInput.focus();
                searchInput.value = val;
            }
        });
    </script>
}
