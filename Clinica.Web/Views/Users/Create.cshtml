@model Clinica.Web.Models.UserCreateViewModel

@{
    ViewData["Title"] = "Nuevo usuario";
    var allRoles = ViewBag.AllRoles as List<string> ?? new List<string>();
}

<h1>Nuevo usuario</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div id="password-rules" class="small mt-2" style="display:none;">
            <div data-rule="len" class="text-danger">• Mínimo 6 caracteres</div>
            <div data-rule="lower" class="text-danger">• Al menos 1 minúscula</div>
            <div data-rule="upper" class="text-danger">• Al menos 1 mayúscula</div>
            <div data-rule="digit" class="text-danger">• Al menos 1 número</div>
            <div data-rule="symbol" class="text-danger">• Al menos 1 símbolo</div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3" id="medico-container" style="display:none;">
        <label class="form-label">Médico (opcional)</label>
        <select asp-for="MedicoId" class="form-select" asp-items="ViewBag.MedicoId">
            <option value="">(Sin médico asociado)</option>
        </select>
        <span asp-validation-for="MedicoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Roles</label>
        <div class="form-check" id="roles-container">
            @foreach (var role in allRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="SelectedRoles" value="@role" id="role_@role" />
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedRoles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Asegura validación en el momento (mientras se escribe) para contraseña y confirmación.
        // Además, muestra un checklist debajo del campo de contraseña.
        $(function () {
            const $password = $('#Password');
            const $confirm = $('#ConfirmPassword');
            const $rules = $('#password-rules');

            function updatePasswordRules() {
                const val = ($password.val() || '').toString();

                // No mostrar el checklist hasta que el usuario empiece a escribir
                if (val.length === 0) {
                    $rules.hide();
                    return;
                }

                const checks = {
                    len: val.length >= 6,
                    lower: /[a-z]/.test(val),
                    upper: /[A-Z]/.test(val),
                    digit: /\d/.test(val),
                    symbol: /[^a-zA-Z0-9]/.test(val)
                };

                const missing = Object.keys(checks).filter(k => !checks[k]);

                // Mostrar solo reglas faltantes
                if (missing.length === 0) {
                    $rules.hide();
                    return;
                }

                $rules.show();
                $rules.find('[data-rule]').hide();
                missing.forEach(k => $rules.find('[data-rule="' + k + '"]').show());
            }

            function validateNow($input) {
                // Fuerza a que jQuery Validate muestre el mensaje debajo del input al instante
                if ($input.length && $input.closest('form').data('validator')) {
                    $input.valid();
                }
            }

            // Oculto al inicio; se mostrará solo cuando el usuario empiece a escribir
            $rules.hide();

            $password.on('input', function () {
                updatePasswordRules();
                validateNow($password);
                validateNow($confirm);
            });

            $confirm.on('input', function () {
                validateNow($confirm);
            });

            // Mostrar/ocultar selector de Médico cuando el rol seleccionado sea "Medico"
            const medicoContainer = document.getElementById('medico-container');
            const medicoSelect = document.getElementById('MedicoId');

            function selectedRole() {
                const checked = document.querySelector('input[name="SelectedRoles"]:checked');
                return checked ? checked.value : null;
            }

            function updateMedicoVisibility() {
                const role = selectedRole();
                const isMedico = role && role.toLowerCase() === 'medico';

                if (isMedico) {
                    medicoContainer.style.display = '';
                } else {
                    medicoContainer.style.display = 'none';
                    // Si cambiaron de rol, limpiamos el médico asociado
                    if (medicoSelect) {
                        medicoSelect.value = '';
                        // Si hay validación, recalcular mensaje (por si quedara algo colgado)
                        if ($(medicoSelect).closest('form').data('validator')) {
                            $(medicoSelect).valid();
                        }
                    }
                }
            }

            updateMedicoVisibility();

            document.querySelectorAll('input[name="SelectedRoles"]').forEach(function (el) {
                el.addEventListener('change', updateMedicoVisibility);
            });
        });
    </script>
}
