@model Clinica.Web.Models.UserEditViewModel

@{
    ViewData["Title"] = "Editar usuario";
    var allRoles = ViewBag.AllRoles as List<string> ?? new List<string>();
    var selectedRoles = ViewBag.SelectedRoles as IList<string> ?? new List<string>();
}

<h1>Editar usuario</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3" id="medico-container" style="display:none;">
        <label class="form-label">Médico (opcional)</label>
        <select asp-for="MedicoId" class="form-select" asp-items="ViewBag.MedicoId">
            <option value="">(Sin médico asociado)</option>
        </select>
        <span asp-validation-for="MedicoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Roles</label>
        <div class="form-check" id="roles-container">
            @foreach (var role in allRoles)
            {
                var isChecked = selectedRoles.Contains(role);
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="SelectedRoles" value="@role" id="role_@role" @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedRoles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const medicoContainer = document.getElementById('medico-container');
            const medicoSelect = document.getElementById('MedicoId');

            function selectedRole() {
                const checked = document.querySelector('input[name="SelectedRoles"]:checked');
                return checked ? checked.value : null;
            }

            function updateMedicoVisibility() {
                const role = selectedRole();
                const isMedico = role && role.toLowerCase() === 'medico';

                if (isMedico) {
                    medicoContainer.style.display = '';
                } else {
                    medicoContainer.style.display = 'none';
                    if (medicoSelect) {
                        medicoSelect.value = '';
                        if ($(medicoSelect).closest('form').data('validator')) {
                            $(medicoSelect).valid();
                        }
                    }
                }
            }

            updateMedicoVisibility();

            document.querySelectorAll('input[name="SelectedRoles"]').forEach(function (el) {
                el.addEventListener('change', updateMedicoVisibility);
            });
        });
    </script>
}
