<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinica.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinica.Web.styles.css" asp-append-version="true" />
</head>
<body class="sidebar-collapsed">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar bg-dark text-white d-flex flex-column">
            <div class="d-flex align-items-center justify-content-between px-3 py-2 border-bottom border-secondary">
                <div class="d-flex align-items-center">
                    <span class="sidebar-brand-text fw-semibold">Clinica.Web</span>
                </div>
                <button id="sidebarToggle" type="button" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-list"></i>
                </button>
            </div>
            <ul class="nav nav-pills flex-column mt-2 mb-auto">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                        <i class="bi bi-speedometer2 me-2"></i>
                        <span class="sidebar-text">Inicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Pacientes" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                        <i class="bi bi-people me-2"></i>
                        <span class="sidebar-text">Pacientes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Medicos" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                        <i class="bi bi-person-badge me-2"></i>
                        <span class="sidebar-text">Médicos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Calendario" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                        <i class="bi bi-calendar3 me-2"></i>
                        <span class="sidebar-text">Calendario</span>
                    </a>
                </li>

                @if (User.IsInRole("Admin") || User.IsInRole("Recepcionista") || User.IsInRole("RecursosHumanos"))
                {
                    <li class="nav-item">
                        <a asp-controller="Turnos" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                            <i class="bi bi-table me-2"></i>
                            <span class="sidebar-text">Turnos</span>
                        </a>
                    </li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("RecursosHumanos"))
                {
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Index" class="nav-link text-white d-flex align-items-center px-3 py-2">
                            <i class="bi bi-people-fill me-2"></i>
                            <span class="sidebar-text">Usuarios</span>
                        </a>
                    </li>
                }
            </ul>

            <div class="mt-auto px-3 pb-3">
                <button id="darkModeToggle" type="button" class="btn btn-sm btn-outline-light w-100 d-flex align-items-center justify-content-center">
                    <i class="bi bi-moon me-2"></i>
                    <span class="sidebar-text">Modo oscuro</span>
                </button>
            </div>
        </nav>

    <!-- Contenido principal -->
    <div class="main-content d-flex flex-column min-vh-100">
        <header class="border-bottom bg-white">
                <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">@ViewData["Title"]</span>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </header>

            <div class="container-fluid flex-grow-1">
                <main role="main" class="pb-3 pt-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted mt-auto">
                <div class="container text-center py-2">
                    &copy; 2026 - Clinica.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
