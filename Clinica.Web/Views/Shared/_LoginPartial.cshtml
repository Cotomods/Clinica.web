@using Microsoft.AspNetCore.Identity
@using Clinica.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav flex-row ms-md-auto ms-0">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item me-2">
        <span class="nav-link text-dark">@User.Identity?.Name</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button type="submit" class="btn btn-sm btn-outline-secondary">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
    </li>
}
</ul>
