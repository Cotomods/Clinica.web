@model Clinica.Domain.Entities.ObraSocial

@{
    ViewData["Title"] = "Nueva Obra Social";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Nueva Obra Social</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre de la Institución</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: OSDE, PAMI, etc." required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Codigo" class="form-label">Código Interno / Sigla</label>
                        <input asp-for="Codigo" class="form-control" placeholder="Ej: OS001" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
