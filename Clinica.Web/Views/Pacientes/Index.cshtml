@model Clinica.Web.Models.PaginatedList<Clinica.Domain.Entities.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Pacientes</h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Recepcionista"))
    {
        <a asp-action="Create" class="btn btn-primary">Nuevo paciente</a>
    }
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Documento</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
    {
        <tr>
            <td>@p.Nombre</td>
            <td>@p.Apellido</td>
            <td>@p.TipoDocumento @p.NumeroDocumento</td>
            <td>@p.Telefono</td>
            <td>@p.Email</td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Recepcionista") || User.IsInRole("RecursosHumanos"))
                {
                    <a asp-action="Edit" asp-route-id="@p.PacienteId" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("RecursosHumanos"))
                {
                    <a asp-action="Delete" asp-route-id="@p.PacienteId" class="btn btn-sm btn-outline-danger me-1">Eliminar</a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Medico"))
                {
                    <a asp-action="HistoriaClinica" asp-route-id="@p.PacienteId" class="btn btn-sm btn-outline-secondary">Historia clínica</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    var start = Math.Max(1, Model.PageIndex - 2);
    var end = Math.Min(Model.TotalPages, Model.PageIndex + 2);

    <nav aria-label="Paginación pacientes">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Anterior</a>
            </li>

            @for (var i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Siguiente</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">@Model.TotalCount registros</span>
            </li>
        </ul>
    </nav>
}
