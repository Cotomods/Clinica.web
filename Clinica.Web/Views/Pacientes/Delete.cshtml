@model Clinica.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar paciente";
}

<h1>Eliminar paciente</h1>

<h3>¿Estás seguro que deseas eliminar este paciente?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre @Model.Apellido</dd>

        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.TipoDocumento @Model.NumeroDocumento</dd>
    </dl>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PacienteId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
