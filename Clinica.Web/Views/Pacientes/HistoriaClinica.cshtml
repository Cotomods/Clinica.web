@model Clinica.Web.Models.HistoriaClinicaFiltroViewModel

@{
    ViewData["Title"] = "Historia clínica";
}

<h1>Historia clínica</h1>

<p>
    <strong>Paciente:</strong> @Model.Paciente.Apellido @Model.Paciente.Nombre<br />
    <strong>Documento:</strong> @Model.Paciente.TipoDocumento @Model.Paciente.NumeroDocumento<br />
</p>

<form asp-action="HistoriaClinica" method="get" class="row g-3 mb-3">
    <input type="hidden" name="id" value="@Model.Paciente.PacienteId" />
    <div class="col-md-3">
        <label asp-for="FechaDesde" class="form-label"></label>
        <input asp-for="FechaDesde" class="form-control" />
    </div>
    <div class="col-md-3">
        <label asp-for="FechaHasta" class="form-label"></label>
        <input asp-for="FechaHasta" class="form-control" />
    </div>
    <div class="col-md-3">
        <label asp-for="MedicoId" class="form-label"></label>
        <select asp-for="MedicoId" asp-items="Model.Medicos" class="form-select">
            <option value="">-- Todos --</option>
        </select>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Filtrar</button>
        <a asp-action="HistoriaClinica" asp-route-id="@Model.Paciente.PacienteId" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

<p>
    <a asp-action="HistoriaClinicaPdf"
       asp-route-id="@Model.Paciente.PacienteId"
       asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
       asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")"
       asp-route-medicoId="@Model.MedicoId"
       class="btn btn-sm btn-outline-primary">Exportar a PDF</a>
</p>

@if (!Model.Consultas.Any())
{
    <p>No hay consultas registradas para este paciente con los filtros seleccionados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Médico</th>
                <th>Motivo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Consultas)
        {
            <tr>
                <td>@c.FechaConsulta.ToString("g")</td>
                <td>@c.Medico?.Apellido @c.Medico?.Nombre</td>
                <td>@c.MotivoConsulta</td>
                <td>
                    <a asp-controller="Consultas" asp-action="Edit" asp-route-id="@c.ConsultaMedicaId" class="btn btn-sm btn-outline-secondary">Ver / Editar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
