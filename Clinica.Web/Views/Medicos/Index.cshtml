@model Clinica.Web.Models.PaginatedList<Clinica.Domain.Entities.Medico>

@{
    ViewData["Title"] = "Médicos";
}

<h1>Médicos</h1>

<div class="row mb-3 mt-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">Nuevo médico</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="text" name="searchTerm" id="searchInput" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Buscar por apellido o especialidad..." autocomplete="off" />
            <button type="submit" class="btn btn-secondary me-2">Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Matrícula</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Nombre</td>
            <td>@m.Apellido</td>
            <td>@m.Especialidad?.Nombre</td>
            <td>@m.Matricula</td>
            <td>
                <a asp-action="GenerarTurnos" asp-route-id="@m.MedicoId" class="btn btn-sm btn-secondary">Generar turnos</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    var start = Math.Max(1, Model.PageIndex - 2);
    var end = Math.Min(Model.TotalPages, Model.PageIndex + 2);

    <nav aria-label="Paginación médicos">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex - 1)" 
                   asp-route-searchTerm="@ViewData["CurrentFilter"]">Anterior</a>
            </li>

            @for (var i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-pageNumber="@i" 
                       asp-route-searchTerm="@ViewData["CurrentFilter"]">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex + 1)" 
                   asp-route-searchTerm="@ViewData["CurrentFilter"]">Siguiente</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">@Model.TotalCount registros</span>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const searchForm = document.getElementById("searchForm");
            let timeout = null;

            if (searchInput && searchForm) {
                searchInput.addEventListener("input", function () {
                    clearTimeout(timeout);
                    timeout = setTimeout(function () {
                        searchForm.submit();
                    }, 500); // 500ms debounce
                });

                const val = searchInput.value;
                searchInput.value = '';
                searchInput.focus();
                searchInput.value = val;
            }
        });
    </script>
}
